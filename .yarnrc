# ~/.yarnrc - Yarn package manager configuration

# Configuration for Yarn package manager (Yarn Classic v1.x)

# =============================================================================

# REGISTRY SETTINGS

# =============================================================================

# Default registry

registry "<https://registry.npmjs.org/>"

# Registry for scoped packages

# "@myorg:registry" "<https://npm.myorg.com/>"

# =============================================================================

# NETWORK SETTINGS

# =============================================================================

# Network timeout in milliseconds

network-timeout 60000

# Number of retries for network requests

network-concurrency 16

# =============================================================================

# CACHE SETTINGS

# =============================================================================

# Cache folder location

# cache-folder "~/.yarn-cache"

# Disable cache

# cache false

# =============================================================================

# PROGRESS AND OUTPUT

# =============================================================================

# Disable progress bars (useful for CI)

# progress false

# Disable emoji in output

# emoji false

# =============================================================================

# SECURITY

# =============================================================================

# Check checksums

check-files true

# =============================================================================

# INSTALLATION BEHAVIOR

# =============================================================================

# Automatically save dependencies to package.json

save-prefix "^"

# Use exact versions

# save-exact true

# Ignore engines check

# ignore-engines true

# Ignore platform check

# ignore-platform false

# Ignore optional dependencies

# ignore-optional false

# =============================================================================

# SCRIPTS

# =============================================================================

# Ignore scripts during install

# ignore-scripts false

# =============================================================================

# WORKSPACES

# =============================================================================

# Enable workspaces (requires yarn workspace feature)

# workspaces-experimental true

# =============================================================================

# PROXY SETTINGS

# =============================================================================

# HTTP proxy

# proxy "<http://proxy.company.com:8080>"

# HTTPS proxy

# https-proxy "<http://proxy.company.com:8080>"

# =============================================================================

# NODE.JS SETTINGS

# =============================================================================

# Unsafe HTTP parser

# unsafe-http-parser false

# =============================================================================

# NOTES

# =============================================================================

# This configuration is for Yarn Classic (v1.x)

# For Yarn Berry (v2+), use .yarnrc.yml instead

# Common Yarn commands

# yarn install                   # Install dependencies

# yarn add package-name          # Add dependency

# yarn add --dev package-name    # Add dev dependency

# yarn remove package-name       # Remove dependency

# yarn upgrade                   # Upgrade dependencies

# yarn outdated                  # Check for outdated packages

# yarn audit                     # Security audit

# yarn cache clean               # Clean cache

# For private registries

# Add to this file

# registry "<https://npm.mycompany.com/>"

# Or use: yarn config set registry <https://npm.mycompany.com/>

# For authentication with private registries

# yarn config set //npm.mycompany.com/:_authToken TOKEN
